<h1>Update a menu</h1>
 
<%= form_with url: menu_path, method: :patch, class: "signUp-form" do |f| %>
  <p> 
    <%= f.text_field :name,
                        placeholder: "Menu Name",
                        value: @menu.name,
                        autofocus:"autofocus"
    %>
  </p>
    <p>
    <%= label_tag(:active,"Active") %>
    <%= f.check_box :active,
                        checked: @menu.active
    %>
    </p>
    <br>
    <%= f.submit %> 
  </p>
<% end %>